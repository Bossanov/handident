<div class="page text-center">
  <!-- Page Content-->
  <main class="page-content section-98 section-sm-110" style="padding-top: 0px;">
    <!-- Contact us-->
    <section class="offset-top-90 offset-md-top-130">
      <%= simple_form_for @contact do |f| %>
        <div class="shell">
          <div class="range range-xs-center range-lg-left">
            <div class="cell-sm-8">
              <h4 class="text-md-left">Contacter Handident</h4>
              <hr class="text-subline">
              <div class="offset-top-30">
                <form data-form-output="form-output-global" data-form-type="contact" method="post" action="bat/rd-mailform.php" novalidate="novalidate" class="rd-mailform text-left">
                  <div class="form-group form-group-label-outside offset-top-20">
                    <%= f.input :first_name, id:"contacts-last-name", type:"text", name:"Adresse", required: true, class: "form-control form-control-last-child" %>
                  </div>
                  <div class="form-group form-group-label-outside offset-top-20">
                    <%= f.input :last_name, id:"contacts-last-name", type:"text", name:"Adresse", required: true, class: "form-control form-control-last-child" %>
                  </div>
                  <div class="form-group form-group-label-outside offset-top-20">
                    <%= f.input :phone_number, id:"contacts-last-name", type:"text", name:"Adresse", required: true, class: "form-control form-control-last-child" %>
                  </div>
                  <div class="form-group form-group-label-outside offset-top-20">
                    <%= f.input :email, id:"contacts-last-name", type:"text", name:"Adresse", required: true, class: "form-control form-control-last-child" %>
                  </div>
                  <div class="form-group form-group-label-outside offset-top-20">
                    <%= f.input :message, :as => :text, input_html: {style: 'max-height:1500px;'}, required: true, class: "form-control form-control-last-child" %>
                  </div>
                  <div class="offset-top-18 offset-sm-top-30 text-center text-sm-left">
                    <%= f.button :submit, 'envoyer mon message', style:"min-width: 130px; font-weight: bold;", class:"btn-fullwidth btn btn-ellipse btn-primary" %>
                    <p><%= link_to 'Annuler', root_path, class: 'btn-fullwidth btn btn-ellipse btn-white', style:"margin-top:20px"%></p>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </section>
  </main>
</div>
<!-- Java script-->
<script src="js/core.min.js"></script>
<script src="js/script.js"></script>
