<% result = []%>
<% @profile = Profile.find_by_id(current_user.profile.id) %>

<% @sort = Message.where(profile_id: @profile.id ) %>
<% @entre = Message.where(destinataire: "#{@profile.last_name} #{@profile.first_name}") %>
<% @entre.each do |mess| %>
  <% pro = Profile.find_by_id(mess.profile_id) %>
<% until result.include?(pro.id) %>
  <div class="cell-sm-6">
    <!-- Post Modern-->
    <article class="post post-modern post-modern-classic">
      <!-- Post media-->
      <% if pro.photo.present? %>
        <header class="post-media"><%= image_tag pro.photo, width:"100", height:"100" %>
        </header>
      <% else %>
        <header class="post-media">
          <img width="100" height="100" src="http://res.cloudinary.com/dz83jh064/image/upload/v1517825470/images_z0whi1.png" alt=""/>
        </header>
      <% end %>


      <!-- Post content-->
      <section class="post-content text-left">
        <!-- Post Title-->
        <div class="post-title offset-top-8">

        </div>
        <ul class="list-inline list-inline-dashed">

          <li><a href='/pages/conversationitem?profile_id=<%=@profile.id%>&auteur_id=<%=pro.id%>' class="text-secondary"><%=pro.last_name%> <%=pro.first_name%></a></li>
        </ul>
        <!-- Post Body-->
        <div class="post-body" style="margin-bottom: 30px;">

        </div>
      </section>
    </article>
  </div>
  <% result << pro.id %>
<% end  %>
<% end %>


