
<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-offset-3">
      <%= simple_form_for [@profile, @review] do |f| %>
        <form class="row" method="post">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.input :review_title , class: "form-control" %>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.input :review_content , input_html: {style: 'height:200px;'}, class: "form-control" %>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.input :rating, collection: 1..5,  class: "form-control" %>
              </div>
            </div>
          <div class="col-md-12 text-center padding-bottom-100">
            <%= f.button :submit, class:"btn btn-primary" %>
            <br>
            <br>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>

